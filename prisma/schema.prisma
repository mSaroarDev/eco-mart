// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id              String   @id @default(cuid())
  serial          Int      @unique @default(autoincrement())
  name            String
  email           String   @unique
  password        String
  role            String
  address         String?  @db.MediumText
  contact_no      String?
  profile_image   String?
  image_public_id String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt

  shipping shipping?
}

model categories {
  id              String   @id @default(cuid())
  serial          Int      @unique @default(autoincrement())
  category_name   String
  category_image  String
  image_public_id String
  created_by      String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
}

model featured_categories {
  id              String   @id @default(cuid())
  serial          Int      @unique @default(autoincrement())
  order           Int
  category_name   String
  category_image  String
  category_link   String
  image_public_id String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
}

model today_deals {
  id         String   @id @default(cuid())
  serial     Int      @unique @default(autoincrement())
  product_id String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
}

model products {
  id              String   @id @default(cuid())
  serial          Int      @unique @default(autoincrement())
  product_name    String
  ratings         Int
  short_des       String   @db.LongText
  regular_price   String?
  price           String
  discount        String
  description     String   @db.LongText
  product_image   String
  image_public_id String
  created_by      String
  category_id     String
  category_name   String
  availability    String   @default("In Stock")
  status          String   @default("Published")
  seo_keywords    String   @db.LongText
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
}

model orders {
  id         String   @id @default(cuid())
  serial     Int      @unique @default(autoincrement())
  isPaid     Boolean
  created_by String
  subtotal   String
  gross      String
  items      Json
  status     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
}

model cart {
  id          String   @id @default(cuid())
  serial      Int      @unique @default(autoincrement())
  created_by  String
  product_id  String
  quantity    String
  total_price Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}

model shipping {
  id           String   @id @default(cuid())
  serial       Int      @unique @default(autoincrement())
  userId       String   @unique
  customerName String
  email        String
  phone        String
  postCode     String
  address      String
  city         String
  state        String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt

  users users @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
